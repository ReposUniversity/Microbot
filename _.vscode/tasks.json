{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-microbot",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "compile",
                "-pl",
                "!runelite-maven-plugin",
                "-Dmaven.plugin.validation=false",
                "-q"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Compile Microbot project with Maven"
        },
        {
            "label": "package-microbot", 
            "type": "shell",
            "command": "mvn",
            "args": [
                "package",
                "-pl",
                "!runelite-maven-plugin", 
                "-Dmaven.plugin.validation=false",
                "-DskipTests",
                "-q"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Package Microbot project into JAR",
            "dependsOn": "build-microbot"
        },
        {
            "label": "clean-microbot",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "-q"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always", 
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Clean Microbot build artifacts"
        },
        {
            "label": "full-build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "clean-microbot",
                "package-microbot"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "detail": "Clean, compile and package Microbot project"
        },
        {
            "label": "ðŸš€ start-microbot (Default)",
            "type": "shell",
            "command": "${workspaceFolder}/_start.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Start Microbot using existing JAR (no build required)"
        },
        {
            "label": "ðŸ§¹ clean-project",
            "type": "shell", 
            "command": "${workspaceFolder}/_clean.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Clean project using _clean.sh script"
        },
        {
            "label": "âš¡ build-and-start",
            "type": "shell",
            "command": "${workspaceFolder}/_build_and_start.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Full build and start using _build_and_start.sh script"
        },
        {
            "label": "run-jar",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "JAR_PATH=$(find runelite-client/target -name 'microbot-*.jar' -type f 2>/dev/null | head -n1); if [ -z \"$JAR_PATH\" ]; then JAR_PATH=$(find runelite-client/target -name 'client-*.jar' -type f 2>/dev/null | head -n1); fi; if [ -n \"$JAR_PATH\" ]; then echo \"Running: $JAR_PATH\"; java --add-opens=java.desktop/com.apple.eawt=ALL-UNNAMED --add-exports=java.desktop/com.apple.eawt=ALL-UNNAMED -jar \"$JAR_PATH\"; else echo \"No JAR file found!\"; exit 1; fi"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Find and run Microbot JAR dynamically",
            "dependsOn": "package-microbot"
        }
    ]
}
